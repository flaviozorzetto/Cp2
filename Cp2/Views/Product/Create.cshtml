@{
    ViewData["Title"] = "Create new Product";
}

<h1>Criação de produto</h1>

<a asp-action="Index">Lista de produtos</a>

<form asp-action="create" class="d-flex flex-column gap-4 mt-4">

    @await Html.PartialAsync("_ProductTextInput", null, new ViewDataDictionary (ViewData)
    {
    {"Label", "Nome"},
    {"For", "Name"},
    {"Type", "text"}
    })

    @await Html.PartialAsync("_ProductTextInput", null, new ViewDataDictionary (ViewData)
    {
    {"Label", "Descrição"},
    {"For", "Description"},
    {"Type", "text"}
    })

    @await Html.PartialAsync("_ProductTextInput", null, new ViewDataDictionary (ViewData)
    {
    {"Label", "Preço"},
    {"For", "Price"},
    {"Type", "number"}
    })

    @await Html.PartialAsync("_ProductTextInput", null, new ViewDataDictionary (ViewData)
    {
    {"Label", "Quantidade"},
    {"For", "Quantity"},
    {"Type", "number"}
    })

    @await Html.PartialAsync("_ProductTextInput", Model, new ViewDataDictionary (ViewData)
    {
    {"Label", "Tipo de Produto"},
    {"For", "ProductType"},
    {"Type", "select"}
    })

    <button type="submit" class="btn btn-primary">Confirmar</button>

</form>